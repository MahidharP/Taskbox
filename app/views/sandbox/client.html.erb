<h1>
    Total Clients :
    <%= @client.size %>
</h1>
<% last_client = Client.last %>

<% if last_client.projects.empty? %>
<h3>
    No projects found. Add your first project</h3>
<% else %>
<ul>
    <b>Total projects :
        <%= last_client.projects.size %>
        <% last_client.projects.each do |project| %>
        <li><%= project.name %></li>
        <% end %>
    </ul>
    <% end %>

    <% @client.each do |client| %>
    <h3><%=client.details %></h3>
    <ul>
        <% client.list_projects.each do |project| %>
        <li><%= project.name %></li>
        <% end %>
    </ul>
    <% end %>
    <hr/>

    <ol>
        <% @client.each do |client| %>
        <li>
            name -
            <%= client.name %>, company -
            <%= client.company %>, mobile -
            <%= client.mobile %>
        </li>
        <%end %>
    </ol>

    <table border="10">
        <thread>
            <tr>
                <th>Sl.no</th>
                <th>Name</th>
                <th>Company</th>
                <th>Mobile</th>
                <th>Email</th>
            </tr>
        </thread>
        <tbody>
            <% @client.each_with_index do |client,index| %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= client.name.capitalize %></td>
                <td><%= client.company.capitalize %></td>
                <td><%= client.mobile %></td>
                <td><%= client.email %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <hr/>
    <h2>Client Details
    </h2>
    <p>name -
        <%= @clien.name %></p>
    <p>company -
        <%= @clien.company %></p>

    <h2>
        Clients by id 1 & 3
    </h2>
    <ol>
        <% for client in @client_by_id %>
        <li><%= client.name %></li>
        <% end %>
    </ol>
