<h1>Listing employees</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Company</th>
            <th>Department</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @employees.each do |employee| %>
        <tr>
            <td><%= employee.first_name %></td>
            <td><%= employee.last_name %></td>
            <td><%= employee.company.nil? ? "N/A" : employee.company.name  %></td>
            <td><%= employee.department.nil? ? "N/A" : employee.department.name  %></td>
            <td><%= link_to 'Show', employee %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
            <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

